<!DOCTYPE html>
<html>
<head>
  <title>EclubCareer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render "partials/navigation_bar" %>

<div class="container">
  <% flash.each do |key, value| %>
    <% if key.to_s == "notice" %>
      <div class="alert alert-<%= key %> alert-success"><%= value %></div>
    <% elsif key.to_s == "alert" %>
      <div class="alert alert-<%= key %> alert-danger"><%= value %></div>
    <% else %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
  <% end %>
  
  <%= yield %>
</div>

<%= render "partials/footer_bar" %>

</body>
</html>
